{
  "name": "template-js",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll=true",
    "type-check": "tsc"
  },
  "dependencies": {
    "isomorphic-unfetch": "3.0.0",
    "next": "latest",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/preset-env": "latest",
    "@babel/preset-react": "latest",
    "@babel/preset-typescript": "latest",
    "@types/enzyme": "latest",
    "@types/enzyme-adapter-react-16": "latest",
    "@types/jest": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/styled-components": "latest",
    "enzyme": "latest",
    "enzyme-adapter-react-16": "latest",
    "enzyme-to-json": "latest",
    "jest": "latest",
    "ts-jest": "latest",
    "typescript": "latest"
  },
  "peerDependencies": {
    "react-is": "^16.8.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "errorOnDeprecated": true,
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "babelConfig": "<rootDir>/src/system/testing/babel.config.json"
      }
    },
    "testMatch": [
      "**/*.test.*",
      "!**/node_modules/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/system/testing/enzyme.config.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1",
      "^@pages/(.*)$": "<rootDir>/pages/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
}
